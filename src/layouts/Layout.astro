<style is:global>
  a {
    @apply text-amber-400 underline;
  }

  h2,
  h3 {
    @apply text-2xl lg:text-4xl underline text-fuchsia-300 -skew-y-2 font-bold;
  }

  section {
    @apply flex flex-col justify-start gap-4;
  }
</style>

<style>
  body {
    @apply text-white text-lg lg:text-2xl font-mono h-full w-full min-h-screen bg-indigo-400 bg-gradient-to-br from-slate-900 to-indigo-900 bg-fixed flex flex-col justify-start items-center p-4 gap-4;
  }

  main {
    @apply max-w-2xl lg:max-w-4xl flex flex-col justify-start gap-8;
  }
</style>
