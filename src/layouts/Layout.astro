---
import "../styles/brands.min.css";
import "../styles/fontawesome.min.css";
import "../styles/solid.min.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Navigation from "../components/navigation.astro";
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="google-site-verification"
      content="bbeMFVfCgsQoSR-0vbLYK4seHeQkqG8RriOQfKE07Ng"
    />
    <meta
      name="google-site-verification"
      content="muSWTm4hx8LR-x_0pYSxKOCYO3ztPC8RNBHx0ufUJbk"
    />
    <meta
      name="google-site-verification"
      content="_2xWxbyalVXrUjMMGy1dTOb50mjVtVEmQnTVU2czN9Q"
    />
    <meta
      name="google-site-verification"
      content="c5E52uDuuaonrfjuwEZbpPw5ibu_qEWm1Ic8FAb0RzQ"
    />
    <title>Tripp Shelnutt - {title}</title>
    <link rel="shortcut icon" href="/favicon.ico" />
  </head>

  <body>
    <Navigation />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  a {
    @apply text-amber-400 underline decoration-wavy decoration-1;
  }

  h2 {
    @apply text-4xl lg:text-6xl text-fuchsia-300 font-bold bg-clip-text text-transparent bg-gradient-to-br from-fuchsia-300 to-indigo-400 h-10 lg:h-16;
  }

  h4 {
    @apply text-lg lg:text-xl text-fuchsia-200 italic;
  }

  section {
    @apply flex flex-col justify-start gap-8;
  }
</style>

<style>
  body {
    @apply text-white text-lg lg:text-2xl font-mono h-full w-full min-h-screen bg-slate-900 bg-gradient-to-br from-slate-900 to-indigo-900 bg-fixed flex flex-col justify-start items-center p-4 gap-4;
  }

  main {
    @apply max-w-2xl lg:max-w-4xl min-w-80 flex flex-col justify-start gap-8;
  }
</style>
