---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const formattedDate =  new Date(frontmatter.date).toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' });
---

<Layout title={frontmatter.title}>
  <section>
    <h2>{frontmatter.title}</h2>
    <h4>{frontmatter.author} - {formattedDate}</h3>
  </section>
  <section>
    <p>{frontmatter.description}</p>
  </section>
  <section class="text">
    <slot />
  </section>
</Layout>

<style is:global>
  ul {
    @apply list-disc pl-4;
  }

  li {
    @apply m-2;
  }
</style>

<style>
  i {
    @apply pr-4 text-amber-400 scale-75;
  }

  p {
    @apply text-base lg:text-lg text-amber-400;
  }

  section.text {
    @apply font-serif text-lg lg:text-xl;
  }
</style>
